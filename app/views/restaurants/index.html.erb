<h1>All the restaurants</h1>

<ul>
  <% @restaurants.each do |id, restaurant| %>
    <li>
      <h3><%= restaurant[:name] %></h3>
      <p><%= restaurant[:category] %></p>
       <p><%= restaurant[:address] %></p>
       <%= link_to restaurant_path(id) do  %>
          "See more"
       <% end %>
    </li>
  <% end %>
</ul>
